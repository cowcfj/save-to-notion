{
  "ignorePatterns": ["archive/"],
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "plugins": ["regexp"],
  "parserOptions": {"ecmaVersion": 12, "sourceType": "script"},
  "globals": {
    "Readability": "readonly",
    "chrome": "readonly",
    "Highlight": "readonly",
    "CSS": "readonly",
    "SrcsetParser": "readonly",
    "AttributeExtractor": "readonly",
    "FallbackStrategies": "readonly",
    "ErrorHandler": "readonly",
    "RetryManager": "readonly",
    "withRetry": "readonly",
    "fetchWithRetry": "readonly",
    "Node": "readonly"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-empty": ["error", {"allowEmptyCatch": true}],
    "no-case-declarations": "off",
    "no-implicit-coercion": ["error", {
      "boolean": true,
      "number": false,
      "string": false,
      "disallowTemplateShorthand": false
    }],
    "object-shorthand": ["warn", "always", {
      "avoidQuotes": true,
      "ignoreConstructors": false,
      "avoidExplicitReturnArrows": false
    }],

    "regexp/no-invalid-regexp": "error",
    "regexp/no-unused-capturing-group": "warn",
    "regexp/no-super-linear-backtracking": "warn",
    "regexp/no-control-character": "warn",
    "regexp/optimal-quantifier-concatenation": "warn",
    "regexp/prefer-unicode-codepoint-escapes": "warn",
    "regexp/unicode-escape": "warn",
    "regexp/no-useless-flag": "warn",
    "regexp/prefer-regexp-exec": "warn",
    "regexp/prefer-regexp-test": "warn"
  }
}