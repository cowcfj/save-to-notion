{
  "name": "notion-smart-clipper",
  "version": "2.9.2",
  "description": "智能網頁擷取工具，支持網站 Icon、封面圖提取、增強的圖片提取、模板自定義、多顏色標註功能，一鍵保存到 Notion。",
  "main": "index.js",
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci --maxWorkers=2 --reporters=default --reporters=jest-junit",
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch"
  },
  "keywords": [
    "notion",
    "chrome-extension",
    "web-clipper",
    "highlight",
    "save-to-notion"
  ],
  "author": "Cow Chan",
  "license": "MIT",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/cowcfj/save-to-notion/issues"
  },
  "homepage": "https://github.com/cowcfj/save-to-notion",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-jest": "^29.5.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-junit": "^16.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "@notionhq/client": "^2.2.15"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "scripts/**/*.js",
      "tests/helpers/utils.testable.js",
      "tests/helpers/background-utils.testable.js",
      "tests/helpers/highlighter-v2.testable.js",
      "tests/helpers/content.testable.js",
      "tests/helpers/content-extraction.testable.js",
      "!scripts/**/*.test.js",
      "!scripts/**/*.spec.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 25,
        "functions": 37,
        "lines": 29,
        "statements": 29
      }
    }
  }
}