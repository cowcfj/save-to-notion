{
  "name": "notion-smart-clipper",
  "version": "2.30.0",
  "description": "智能網頁擷取工具，支持網站 Icon、封面圖提取、增強的圖片提取、模板自定義、多顏色標註功能，一鍵保存到 Notion。",
  "main": "index.js",
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "scripts": {
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:quick": "jest --config jest.config.js --onlyChanged --coverage",
    "test:ci": "jest --config jest.config.js --ci --coverage --maxWorkers=2",
    "test:e2e": "npm run build:prod && playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:merge-coverage": "node tests/e2e/coverage-merger.js",
    "test:all": "npm run test:coverage && npm run test:e2e && npm run test:merge-coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md,html}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,html}\"",
    "postinstall": "npm run build",
    "build": "rollup -c rollup.all.config.mjs",
    "build:watch": "rollup -c rollup.all.config.mjs -w",
    "build:highlighter": "rollup -c rollup.config.mjs",
    "build:prod": "NODE_ENV=production rollup -c rollup.all.config.mjs",
    "build:content": "rollup -c rollup.content.config.mjs",
    "build:content:watch": "rollup -c rollup.content.config.mjs -w",
    "build:content:prod": "NODE_ENV=production rollup -c rollup.content.config.mjs",
    "build:all": "npm run build",
    "build:all:prod": "NODE_ENV=production npm run build:prod",
    "dev": "npm run build:watch",
    "prepare": "husky"
  },
  "keywords": [
    "notion",
    "chrome-extension",
    "web-clipper",
    "highlight",
    "save-to-notion"
  ],
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "author": "Cow Chan",
  "license": "MIT",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/cowcfj/save-to-notion/issues"
  },
  "homepage": "https://github.com/cowcfj/save-to-notion",
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/preset-env": "^7.28.5",
    "@playwright/test": "^1.58.1",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "babel-jest": "^30.2.0",
    "baseline-browser-mapping": "^2.9.15",
    "eslint-plugin-compat": "^6.1.0",
    "eslint-plugin-jest": "^29.12.2",
    "eslint-plugin-jsdoc": "^62.5.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.6",
    "eslint-plugin-unicorn": "^62.0.0",
    "husky": "^9.1.6",
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-report": "^3.0.1",
    "istanbul-reports": "^3.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-junit": "^16.0.0",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "puppeteer": "^24.31.0",
    "rollup": "^4.55.1",
    "v8-to-istanbul": "^9.3.0"
  },
  "dependencies": {
    "@notionhq/client": "^5.9.0"
  },
  "lint-staged": {
    "*.config.js": [
      "prettier --write"
    ],
    "*.js": [
      "prettier --write",
      "eslint --fix --no-warn-ignored"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
